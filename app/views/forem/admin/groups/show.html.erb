<%= currently_at t("admin_area", scope: 'layouts.forums') %>

<h2><%= t('forem.admin.group.members', :group => forem_emojify(@group.name)) %></h2>
<br/>
<%= text_field_tag "new_member" %><%= button_tag t(".add_member"), :disabled => true, :id => "add_member", "data-group-id" => "#{@group.id}"  %>

<ul id='members'>
  <% @group.members.each do |member| %>
    <li><%= member.to_s %></li>
  <% end %>
</ul>
<br/>
<%= link_to t('cancel', scope: :general), forem.admin_groups_path, class: 'btn' %>
<br/>
<%= javascript_include_tag "forem/admin/members" %>
